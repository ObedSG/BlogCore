@* Vista principal para la gestión de categorías *@

@{
    ViewData["title"] = "lista de categoria";
}
<div class=" container mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary"> Lista de Categorias </h2>
        </div>

        <div class="col-4 text-right">
            <a asp-action="Create" class="btn btn-primary"> <i class="fa-regular fa-plus"></i>Crear Nueva Categoria </a>
        </div>
    </div>
    
    <br />
    <br />

    @* Tabla de categorías con DataTables *@
    <table id="tblCategorias" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th> Id</th>          @* Identificador único de la categoría *@
                <th>Nombre</th>       @* Nombre de la categoría *@
                <th>Orden</th>        @* Orden de visualización de la categoría *@
                <th>Acciones</th>     @* Columna para botones de editar/eliminar *@
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/categoria.js">  </script>
}